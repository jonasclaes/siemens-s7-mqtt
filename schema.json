{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/jonasclaes/siemens-s7-mqtt/schema.json",
    "title": "Siemens S7 MQTT Configuration",
    "description": "Configuration for the Siemens S7 MQTT integration.",
    "type": "object",
    "properties": {
        "mqtt": {
            "type": "object",
            "description": "MQTT configuration",
            "properties": {
                "url": {
                    "type": "string",
                    "description": "MQTT broker URL"
                }
            },
            "required": [
                "url"
            ]
        },
        "s7": {
            "type": "object",
            "description": "S7 configuration"
        },
        "lights": {
            "type": "array",
            "description": "List of lights to control",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/$defs/light"
                    }
                ]
            }
        }
    },
    "$defs": {
        "light": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "light"
                    ]
                },
                "id": {
                    "type": "string",
                    "description": "Unique identifier for the light"
                }
            },
            "required": [
                "type",
                "id"
            ]
        }
    }
}